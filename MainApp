package com.ejemplo.javafxlibreriasdemo;

import com.ejemplo.javafxlibreriasdemo.views.PrincipalView;
import javafx.application.Application;
import javafx.scene.Parent;
import javafx.scene.Scene;
import javafx.stage.Stage;

public class MainApp extends Application {

    @Override
    public void start(Stage primaryStage) {
        try {
            PrincipalView principalView = new PrincipalView();

            Scene scene = new Scene((Parent) principalView.getView(), 900, 600);

            scene.getStylesheets().add(
                    getClass().getResource("/org/kordamp/bootstrapfx/bootstrapfx.css").toExternalForm()
            );

            primaryStage.setTitle("Demo JavaFX con Librer√≠as");
            primaryStage.setScene(scene);
            primaryStage.show();
        } catch (Exception e) {
            e.printStackTrace();
        }
    }

    public static void main(String[] args) {
        launch(args);
    }
}
